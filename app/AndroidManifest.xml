<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openmidaas.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
         />
	<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name="App"
        android:allowBackup="true"
        android:launchMode="singleInstance"
        android:screenOrientation="portrait"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/customTheme"
        android:debuggable="false">
        <activity android:name=".activities.DeviceRegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.EmailRegistrationActivity"></activity>
        <activity android:name=".activities.AttributeListActivity"></activity>
        <activity android:name=".activities.GenericAttributeCollectionActivity"></activity>
        <activity android:name=".activities.HomeScreen"></activity>
        <activity android:name=".activities.AddressActivity"></activity>
        <activity android:name=".activities.CreditCardActivity"></activity>
        <activity android:name="net.hockeyapp.android.UpdateActivity" />
    </application>

</manifest>
